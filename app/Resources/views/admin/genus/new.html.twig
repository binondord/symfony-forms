{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>New Genus</h1>

                {{  form_start(genusForm) }}

                    {{  form_widget(genusForm.name) }}
                    {{  form_widget(genusForm.subFamily) }}
                    {{  form_widget(genusForm.speciesCount, {
                        'label' : 'num of species'
                    }) }}
                    {{  form_widget(genusForm.funFact) }}
                    {{  form_widget(genusForm.isPublished) }}



                    <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(genusForm) }}
            </div>
        </div>
    </div>
{% endblock %}
